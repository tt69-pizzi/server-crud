<body class="">
    <link href="../assets/dist/css/bootstrap/tabulator_bootstrap.min.css" rel="stylesheet">
    <script type="text/javascript" src="../assets/dist/js/tabulator.min.js"></script>
    <section class="main-content">
        <div class="content">
            <div class="container-fluid">
                <div class="col-md-12">
                    <form id="TypeValidation" class="form-horizontal" action="" method="POST">
                        <div class="card ">
                            <div class="card-header card-header-rose card-header-text">
                                <div class="card-text">
                                    <h4 class="card-title">Add Valid User</h4>
                                </div>
                            </div>
                            <div class="card-body ">
                                <div class="row">
                                    <label class="col-sm-2 col-form-label">name</label>
                                    <div class="col-sm-7">
                                        <div class="form-group">
                                            <input class="form-control" type="text" name="required" required="true" />
                                        </div>
                                    </div>
                                    <label class="col-sm-3 label-on-right">
                                        <code>required</code>
                                    </label>
                                </div>
                                <div class="row">
                                    <label class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-7">
                                        <div class="form-group">
                                            <input class="form-control" type="text" name="email" email="true"
                                                required="true" />
                                        </div>
                                    </div>
                                    <label class="col-sm-3 label-on-right">
                                        <code>email="true"</code>
                                    </label>
                                </div>
                                <div class="row">
                                    <label class="col-sm-2 col-form-label">password</label>
                                    <div class="col-sm-7">
                                        <div class="form-group">
                                            <input class="form-control" type="text" password="required"
                                                required="true" />
                                        </div>
                                    </div>
                                    <label class="col-sm-3 label-on-right">
                                        <code>required</code>
                                    </label>
                                </div>
                            </div>
                            <div class="card-footer ml-auto mr-auto">
                                <button type="submit" value="POST" class="btn btn-rose">Validate Inputs</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header card-header-icon card-header-rose">
                                <div class="card-icon">
                                    <i class="material-icons">assignment</i>
                                </div>
                                <h4 class="card-title mt-0">Users Table - unchangeable</h4>
                                <p class="card-category"> Here is a list of all Users</p>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <div id="table-users"></div>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script language="javascript">

            //Build Tabulator
            var table = new Tabulator("#table-users", {
                height: 325, // set height of table (in CSS or here),
                layout: "fitColumns", //fit columns to width of table (optional)
                pagination: "local",
                paginationSize: 15,
                movableColumns: true,
                columns: [
                    { title: "id", field: "id", width: 3, editor: "input" },
                    { title: "name", field: "name", editor: "input" },
                    { title: "email", field: "email", align: "left", editor: "input" },
                    { title: "password", field: "password", align: "left", editor: "input" },
                    { title: "email_verified_at", field: "email_verified_at", align: "left", editor: "input" },
                    { title: "update_at", field: "update_at", align: "left", editor: "input" }
                ],
            });

            table.setData('/api/users/list');
        </script>

        <% include partials/page-end %>
        <% include partials/footer %>
        <% include partials/plugbar %>
        <% include partials/post-footer %>
</body>